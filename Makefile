# --------------------------------------------------------------------------- #
# Compiler and flags
# --------------------------------------------------------------------------- #
CC      := gcc
CFLAGS  := -Wall -Wextra -Werror -I .

# --------------------------------------------------------------------------- #
# Library name
# --------------------------------------------------------------------------- #
NAME    := libftprintf.a

# --------------------------------------------------------------------------- #
# ft_printf sources
# --------------------------------------------------------------------------- #
SRCS    := ft_printf.c \
           ft_printf_utils.c \
		   ft_flags_bonus.c

OBJS    := $(SRCS:.c=.o)

# --------------------------------------------------------------------------- #
# Rules
# --------------------------------------------------------------------------- #
all: $(NAME)

$(NAME): $(OBJS)
	@$(MAKE) -C libft
	cp libft/libft.a $(NAME)
	ar rcs $(NAME) $(OBJS)

# --------------------------------------------------------------------------- #
# Generic compile rule
# --------------------------------------------------------------------------- #
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# --------------------------------------------------------------------------- #
# Clean rules
# --------------------------------------------------------------------------- #
clean:
	@$(MAKE) -C libft clean
	rm -f $(OBJS)

fclean: clean
	@$(MAKE) -C libft fclean
	rm -f $(NAME)

re: fclean all

# --------------------------------------------------------------------------- #
.PHONY: all clean fclean re

# --------------------------------------------------------------------------- #
# Test rule
# --------------------------------------------------------------------------- #
test: all
	$(CC) $(CFLAGS) -o test ft_printf_utils.c libftprintf.a libft/libft.a
	@echo "Executable created: ./test"